{
  "name": "blood-bank-management-system",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm install && npm run build:client",
    "start": "node minimal-server.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "cd server && npm run dev",
    "install-server": "cd server && npm install",
    "build:client": "vite build",
    "build:server": "cd server && npm install --omit=dev",
    "build:full": "npm run build:client && npm run build:server",
    "start:prod": "cd server && npm start",
    "deploy:prepare": "npm install && npm run build:full",
    "deploy:local": "npm run deploy:prepare && npm run start:prod",
    "heroku-postbuild": "npm run build:full",
    "railway:build": "npm install && npm run build:client && cd server && npm install",
    "railway:start": "cd server && npm start"
  },
  "dependencies": {
    "@react-google-maps/api": "^2.20.7",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "mongoose": "^8.17.0",
    "nodemailer": "^6.9.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.0.6"
  }
}
